{
  "name": "musify",
  "productName": "Musify",
  "version": "0.8.1",
  "description": "",
  "main": "main.js",
  "author": "Alvaro Galisteo",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "fix": "standard --verbose --fix | snazzy",
    "package-mac": "electron-packager build/ --overwrite --platform=darwin --arch=x64 --icon=512.icns --prune=true --out=release-builds",
    "package-win": "electron-packager build/ musify --overwrite --asar=true --platform=win32 --arch=ia32 --icon=512.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Musify\"",
    "package-linux": "electron-packager build/ musify --overwrite --asar=true --platform=linux --arch=x64 --icon=512.png --prune=true --out=release-builds"
  },
  "devDependencies": {
    "dialogs": "^1.1.20",
    "electron": "^1.7.10",
